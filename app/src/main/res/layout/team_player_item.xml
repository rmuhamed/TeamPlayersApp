<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:res="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="185dp"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="10dp"
    res:cardCornerRadius="2.5dp"
    res:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/team_player_item_picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/team_player_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="normal"
            tools:text="@string/dummy_team_player_name" />

        <TextView
            android:id="@+id/team_player_item_jersey_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:text="@string/dummy_team_player_jersey_number" />
    </LinearLayout>
</android.support.v7.widget.CardView>